FROM alpine:3.9.2
# install basic tools
RUN apk update
RUN	apk add --no-cache \
  shadow \
	bash \
	apache2 \
	php7-apache2 \
	curl \
	ca-certificates \
	openssl \
	openssh \
	git \
	php7 \
	php7-phar \
	php7-json \
	php7-iconv \
	php7-openssl \
	tzdata \
	openntpd \
	nano \
	nodejs \
	npm
# install php apache plugins
RUN apk add --no-cache \
	php7-ftp \
	php7-xdebug \
	php7-mcrypt \
	php7-mbstring \
	php7-soap \
	php7-gmp \
	php7-pdo_odbc \
	php7-dom \
	php7-pdo \
	php7-zip \
	php7-mysqli \
	php7-sqlite3 \
	php7-pdo_pgsql \
	php7-bcmath \
	php7-gd \
	php7-odbc \
	php7-pdo_mysql \
	php7-pdo_sqlite \
	php7-gettext \
	php7-xmlreader \
	php7-xmlwriter \
	php7-tokenizer \
	php7-xmlrpc \
	php7-bz2 \
	php7-pdo_dblib \
	php7-curl \
	php7-ctype \
	php7-session \
	php7-redis \
	php7-exif
# npm install yarn
RUN npm install --global yarn
# remove apk cache, reduce file size
RUN rm -f /var/cache/apk/*
# Apache config
# Add apache to run and configure
# enable rewrite_module, session_module, session_cookie, session_crypto, set document root to /var/www/html
RUN mkdir -p /run/apache2
RUN sed -i "s/#LoadModule\ rewrite_module/LoadModule\ rewrite_module/" /etc/apache2/httpd.conf \
    && sed -i "s/#LoadModule\ session_module/LoadModule\ session_module/" /etc/apache2/httpd.conf \
    && sed -i "s/#LoadModule\ session_cookie_module/LoadModule\ session_cookie_module/" /etc/apache2/httpd.conf \
    && sed -i "s/#LoadModule\ session_crypto_module/LoadModule\ session_crypto_module/" /etc/apache2/httpd.conf \
    && sed -i "s/#LoadModule\ deflate_module/LoadModule\ deflate_module/" /etc/apache2/httpd.conf \
    && sed -i "s#^DocumentRoot \".*#DocumentRoot \"/var/www/html\"#g" /etc/apache2/httpd.conf \
    && sed -i "s#/var/www/localhost/htdocs#/var/www/html#" /etc/apache2/httpd.conf \
		&& sed -i "s/#ServerName www.example.com:80/ServerName localhost/" /etc/apache2/httpd.conf \
    && printf "\n<Directory \"/app/public\">\n\tAllowOverride All\n</Directory>\n" >> /etc/apache2/httpd.conf
# create work dir
WORKDIR /var/www/html
COPY . ./
# apache permission
RUN chown -R apache:apache /var/www/html \
	&& chgrp -R apache /var/www/html \
	&& chmod -R 755 /var/www/html
EXPOSE 80
CMD [ "httpd", "-D", "FOREGROUND" ]
